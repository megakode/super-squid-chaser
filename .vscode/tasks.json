{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$rgbdserror"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "none",
            "problemMatcher": "$rgbdserror"
        },
                {
            "label": "Run with BGB",
            "type": "shell",
            "command": "wine ~/tools/bgb/bgb64.exe ${workspaceFolder}/bin/sbace.gb",
            "problemMatcher": [],
            "dependsOn" : ["Build with GBDK"]
        }
    ]
}
